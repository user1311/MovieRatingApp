@{
    ViewData["Title"] = "Home Page";
}

<style>
    .rating {
        display: flex;
        padding: 0;
        margin: 0;
    }

    .rating li {
        list-style-type: none
    }

    .rating-item {
        cursor: pointer;
        font-size:2em;
        color: darkorange;
    }

    /* initial: make all stars full */
    .rating-item::before {
        content: "\2605";
    }

    /* make until the clicked star (the rest) empty */
    .rating-item.active ~ .rating-item::before {
        content: "\2606";
    }

    /* on hover make all full */
    .rating:hover .rating-item::before {
        content: "\2605";
    }

    /* make until the hovered (the rest) empty */
    .rating-item:hover ~ .rating-item::before {
        content: "\2606";
    }

    span {
        padding-top: 15px;
        padding-left: 30px;
    }

</style>

<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6 d-inline-block d-inline-flex text-center align-content-center align-self-center" align="center">
            <h2 class="text-primary" id="movies">Movies</h2>
            <h2>   |   </h2>
            <h2 id="tvShows">TV Shows</h2>
        </div>
        <div class="col-6 text-right">
        </div>
    </div>
    <br />
    <br />
    <div class="p-3 rounded">
        <table id="tblData" class="table table-striped  dt-responsive" style="width:100%">
            <thead>
                <tr>
                    <th>Cover</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Actors</th>
                    <th>Rating</th>
                    <th hidden></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="js/HomePage.js"></script>
}