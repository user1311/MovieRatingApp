@model MovieRatingApp.Web.Models.DTOs.AuthDTO

<h1>Login</h1>
<form method="post" asp-controller="Home" asp-action="Login">
    <div class="form-group">
        <label asp-for="Username">Email</label>
        <input class="form-control" type="text" asp-for="Username" placeholder="Email" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input class="form-control" type="password" asp-for="Password" placeholder="Password" />
    </div>
    <button type="submit" class="btn btn-success">Login</button>
</form>
